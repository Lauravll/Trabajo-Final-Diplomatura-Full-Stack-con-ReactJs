<!-- Style -->
<body>
  <main>
    <section>
      <div class="container py-5 h-200">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <p class="text-end">Hola {{persona}}! <a href="/admin/login/logout" class="btn btn-gris">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a></p>
        </div>
      </div>
    </section>
    
    <section class="py-1 text-center container">
      <div class="row py-lg-3">
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="fw-normal">Listado de mascotas perdidas</h1>
          <p>
            <a href="/admin/mascotas/agregar" class="btn text-white fondoVioleta"><i class="fa fa-plus" aria-hidden="true"></i> Registrar mascota perdida</a>
          </p>
        </div>
      </div>
    </section>

    <section class="py-1 text-center container">

      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Especie</th>
            <th scope="col">Raza</th>
            <th scope="col">Ojos</th>
            <th scope="col">Pelaje</th>
            <th scope="col">Tamaño</th>
            <th scope="col">Contacto</th>
            <th scope="col">Perdido</th>
            <th scope="col">Imagen</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each mascotas}}
            <tr>
              <th scope="row">{{id_mascota}}</th>
              <td>{{nombre_mascota}}</td>
              <td>{{especie}}</td>
              <td>{{raza}}</td>
              <td>{{ojos}}</td>
              <td>{{pelaje_color}} - {{pelaje_tipo}}</td>
              <td>{{tamanio}}</td>
              <td>{{nombre_contacto}} {{apellido_contacto}}</td>
              <td>{{perdido}}</td>
              <td>{{{imagen}}}</td>
              <td class="text-end">
                <a class="btn btn-secondary" href="/admin/mascotas/editar/{{id_mascota}}"><i class="fa fa-pencil-alt" aria-hidden="true"></i>Editar</a>
                <a class="btn btn-secondary" href="/admin/mascotas/eliminar/{{id_mascota}}"><i class="fa fa-trash" aria-hidden="true"></i>Borrar</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </section>
  </main>
</body>
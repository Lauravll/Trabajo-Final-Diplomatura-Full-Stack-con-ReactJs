<body>
  <main>
    <section>
      <div class="container py-5 h-200">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <form action="/admin/login" method="post">
              <div class="card shadow-2-strong login-class" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                  <h3 class="mb-5">Iniciar Sesión</h3>
                  <div class="form-outline mb-4">
                    <input type="text" id="usuario" class="form-control form-control-lg" placeholder="Usuario" name="usuario"/>
                    <label class="form-label" for="usuario">Usuario</label>
                  </div>
                  <div class="form-outline mb-4">
                    <input type="password" id="password" class="form-control form-control-lg" name="password" placeholder="password"/>
                    <label class="form-label" for="password">Contraseña</label>
                  </div>
                  <!-- Checkbox -->
                  <div class="form-check d-flex justify-content-start mb-4">
                    <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                    <label class="form-check-label" for="form1Example3"> Recordar contraseña </label>
                  </div>
                  <button class="btn btn-secondary btn-lg btn-block" type="submit">Iniciar Sesión</button>
                </div>
              </div>
            </form>
            {{#if error}}
              <div class="form-check d-flex justify-content-start mb-4">
                <label class="form-check-label" for="form1Example3"> Usuario y/o contraseña incorrectos </label>
            {{/if}}
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>